build --crosstool_top=//toolchain:clang_suite
build --linkopt=-fuse-ld=lld-17
build --linkopt=-lc++
build --linkopt=-lm
build --linkopt=-rdynamic
build --linkopt=-lc++experimental
build --cxxopt=-std=c++20
build --cxxopt=-stdlib=libc++
build --cxxopt=-fexperimental-library
build --cpu=k8
build --host_crosstool_top=@bazel_tools//tools/cpp:toolchain

build:opt --copt=-O3

build:coverage --experimental_use_llvm_covmap
build:coverage --experimental_generate_llvm_lcov
build:coverage --instrument_test_targets
build:coverage --instrumentation_filter="//src[/:],//tests[/:]"
build:coverage --experimental_ui_max_stdouterr_bytes=-1

build:enable_logging --define=enable_logging=true
