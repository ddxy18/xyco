{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "root",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_CXX_COMPILER": "clang-$env{LLVM_VERSION}"
            }
        },
        {
            "name": "enable_logging",
            "displayName": "Enable Logging Config",
            "inherits": [
                "root"
            ],
            "cacheVariables": {
                "XYCO_ENABLE_LOGGING": "ON"
            }
        },
        {
            "name": "disable_logging",
            "displayName": "Disable Logging Config",
            "inherits": [
                "root"
            ],
            "cacheVariables": {
                "XYCO_ENABLE_LOGGING": "OFF"
            }
        },
        {
            "name": "ci_linting_with_logging_off",
            "displayName": "CI Linting with Logging Off Config",
            "inherits": [
                "root"
            ],
            "cacheVariables": {
                "XYCO_ENABLE_LOGGING": "OFF",
                "ENABLE_LINTING": true
            }
        },
        {
            "name": "ci_linting_with_logging_on",
            "displayName": "CI Linting with Logging On Config",
            "inherits": [
                "root"
            ],
            "cacheVariables": {
                "XYCO_ENABLE_LOGGING": "ON",
                "ENABLE_LINTING": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "root",
            "hidden": true,
            "configuration": "Release"
        },
        {
            "name": "all_targets",
            "hidden": true,
            "targets": [
                "xyco_epoll_echo_server",
                "xyco_epoll_http_server",
                "xyco_epoll_main",
                "xyco_uring_echo_server",
                "xyco_uring_http_server",
                "xyco_uring_main",
                "asio_echo_server",
                "xyco_test_epoll",
                "xyco_test_uring"
            ]
        },
        {
            "name": "test_targets",
            "hidden": true,
            "targets": [
                "xyco_test_epoll",
                "xyco_test_uring"
            ]
        },
        {
            "name": "ci_linting_with_logging_off",
            "inherits": [
                "root",
                "all_targets"
            ],
            "configurePreset": "ci_linting_with_logging_off"
        },
        {
            "name": "ci_linting_with_logging_on",
            "inherits": [
                "root",
                "all_targets"
            ],
            "configurePreset": "ci_linting_with_logging_on"
        },
        {
            "name": "test",
            "configurePreset": "enable_logging",
            "inherits": [
                "root",
                "test_targets"
            ]
        }
    ],
    "workflowPresets": [
        {
            "name": "ci_linting_with_logging_off",
            "displayName": "CI Linting with Logging Off Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "ci_linting_with_logging_off"
                },
                {
                    "type": "build",
                    "name": "ci_linting_with_logging_off"
                }
            ]
        },
        {
            "name": "ci_linting_with_logging_on",
            "displayName": "CI Linting with Logging On Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "ci_linting_with_logging_on"
                },
                {
                    "type": "build",
                    "name": "ci_linting_with_logging_on"
                }
            ]
        },
        {
            "name": "ci_test",
            "displayName": "CI Test Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "enable_logging"
                },
                {
                    "type": "build",
                    "name": "test"
                }
            ]
        }
    ]
}
